# Keep connections open in the background.
# Close idle connections after 5 minutes.
Host *
  Compression yes
  ControlMaster auto
  ControlPath ~/.ssh/control/%h_%p_%r
  ControlPersist 300
#  UseRoaming no
  UseKeychain yes
  ServerAliveInterval 30
  ServerAliveCountMax 3
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_rsa

