# Keep connections open in the background.
# Close idle connections after 5 minutes.
Host *
  Compression yes
  CompressionLevel 6
  ControlMaster auto
  ControlPath ~/.ssh/control/%h_%p_%r
  ControlPersist 300
#  UseRoaming no
  UseKeychain yes
  ServerAliveInterval 30
  ServerAliveCountMax 3
  IdentitiesOnly yes
  IdentityFile ~/.ssh/id_rsa

Host logothete.linode
  User mike
  Port 443
  ForwardAgent yes

# Proxy github through logothete.
Host github.com
  User git
  HostName github.com
  Port 22
  ProxyCommand ssh -q logothete.linode nc -q0 github.com 22
  ForwardAgent true
# Vagrant local boxes.

Host *.local
  HostName 127.0.0.1
  User vagrant
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
# For vagrant < 1.6, use this. With newer versions, each box has its own key.
#  IdentityFile %d/.vagrant.d/insecure_private_key
  IdentitiesOnly yes
  LogLevel FATAL
  ForwardAgent yes
